<Window x:Class="EpisodeTracker.WPF.Views.Settings.Index"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Index" Height="386.4" Width="395.2">
    <Grid>
        <StackPanel>
            <Label Content="Libraries" HorizontalAlignment="Left" Margin="10,2,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="librariesTextBox" HorizontalAlignment="Left" Height="196" Margin="10,0,0,0" AcceptsReturn="True" TextWrapping="Wrap" VerticalAlignment="Top" Width="369"/>
            <CheckBox x:Name="downloadServiceEnabled" Content="Enable download service" Margin="10, 10" />
        </StackPanel>
        
        <Button Content="Save" HorizontalAlignment="Right" Margin="0,0,5,5" VerticalAlignment="Bottom" Width="75" Click="Save_Click"/>
    </Grid>
</Window>
